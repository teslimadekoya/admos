# Security Configuration for Food Ordering System
# Copy this file to .env and configure with your actual values

# Django Settings
SECRET_KEY=your-super-secret-key-here-minimum-50-characters-long
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (for production, use PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/food_ordering

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Paystack Configuration
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_SECRET_KEY=your-paystack-secret-key

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE_PATH=/var/log/food_ordering/

# Security Monitoring
SECURITY_ALERT_EMAIL=security@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# File Upload Security
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Security
SESSION_TIMEOUT=3600
SESSION_COOKIE_AGE=3600

# API Security
API_RATE_LIMIT=100
API_BURST_LIMIT=10

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-monitoring
